<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.google.s5.notice.NoticeDAO">
  		
  		
  		<!-- 전체 글의 개수 -->
  		<select id="boardCount" resultType="java.lang.Long">
  		select count(num) from notice
  		</select>

   		<select id="boardList" parameterType="java.util.Map"   resultType="com.google.s5.notice.NoticeVO">
   		select * from
			(select N.*,rownum R from 
			(select * from notice  where num>=1
			 order by num desc) N)
			where R between #{startRow} and #{lastRow}
			
   			<!--  select * from notice order by num desc-->
   			<!-- select 문에 나오는 컬럼명과 일치해야 하는 것을 넣어야 한다. -->
   		</select>
   		
   		
   		
  		<select id="boardSelect" parameterType="java.lang.Long" resultType="com.google.s5.notice.NoticeVO">

  			 SELECT * from notice where num=#{num}
  			<!-- 세미콜론 붙이지 말것(주의) 파라미터 VO 컬럼명 모두 맞추기--> 			
  		</select>
  		
  		<insert id="boardWrite" parameterType="com.google.s5.notice.NoticeVO">
  			INSERT into notice values(board_seq.nextval,#{title},#{writer},#{contents},SYSDATE,0)
  			<!-- return 값이 인트인 것은 자동으로 받아준다. -->
  		</insert>

		<delete id="boardDelete" parameterType="java.lang.Long"> <!-- 레퍼런트 클래스는 모두 여기에 있음 -->
		delete notice where num=#{num}
		</delete>
  
  		<update id="boardUpdate" parameterType="com.google.s5.notice.NoticeVO">
  		UPDATE notice set contents =#{contents}, title=#{title} where num=#{num}
  		</update>
  
  
    	<update id="hitUpdate" parameterType="java.lang.Long">
  		UPDATE notice set hit=hit+1 where num=#{num}
  		</update>
  </mapper>