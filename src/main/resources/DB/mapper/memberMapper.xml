<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
   <mapper namespace="com.google.s5.member.MemberDAO">
   <!-- list -->
   <sql id="search">
  		like '%'||#{search}||'%'
  		</sql>	
  		<!-- 전체 글의 개수 -->
  		<select id="memberCount"  parameterType="com.google.s5.member.memberPage.MemberPage"  resultType="java.lang.Long">

  		select count(id) from member 
  		<where>
  			<if test="kind=='id'">
  			id <include refid="search"></include>
  			</if>
  			
  			<if test="kind=='name'">
  			name <include refid="search"></include>
  			</if>
  			
  			<if test="kind=='phone'">
  			phone <include refid="search"></include>
  			</if>
  			
  			<if test="kind=='email'">
  			email <include refid="search"></include>
  			</if>
  			
  		</where>

  		</select>
<!-- list -->
   	<select id="memberList" parameterType="com.google.s5.member.memberPage.MemberPage" resultType="com.google.s5.member.MemberVO">
		select * from
			(select N.*, rownum R from
				(select * from member where 
				<choose>
					<when test="kind == 'id'">
						id
					</when>
					
					<when test="kind=='name'">
						name
					</when>
					
					<when test="kind=='phone'">
						phone
					</when>
					
					<otherwise>
						email
					</otherwise>
				
				</choose>
				<include refid="search"></include> ) N)
				where R between #{startRow} and #{lastRow}
	</select>
   
<!-- insert/join -->
   <insert id="memberJoin" parameterType="com.google.s5.member.MemberVO">
   INSERT INTO member VALUES (#{id},#{password},#{name},#{email},#{tel},#{age})
   </insert>
 
 
 <!-- select/login -->
 	<select id="memberLogin" parameterType="com.google.s5.member.MemberVO"  resultType="com.google.s5.member.MemberVO">
 	select * from member where id=#{id} and password=#{password}
 	</select>
 
 	
 <!-- select/page -->
 	<select id="memberPage" parameterType="com.google.s5.member.MemberVO"  resultType="com.google.s5.member.MemberVO">
 	select * from member where id=#{id}
 	</select>
 
 
 
   
   
   </mapper>